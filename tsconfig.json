{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2016",
        "lib": ["ES6", "DOM"],
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"],
            "@models/*": ["models/*"],
            "@commands/*": ["commands/*"],
            "@util/*": ["util/*"],
            "@events/*": ["events/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
